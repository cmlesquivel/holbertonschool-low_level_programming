# makefile for executable holberton

OBJ = $(SRC:%.c=%.o)
CC = gcc
SRC = main.c holberton.c 
NAME= holberton
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(OBJ): %.o: %.c
	$(CC) -c $(CFLAGS) $< -o $@

.PHONY: clean oclean fclean re

clean :
	$(RM) *~ $(NAME)

oclean :
	$(RM) -f $(OBJ)

fclean : clean oclean

re : oclean all