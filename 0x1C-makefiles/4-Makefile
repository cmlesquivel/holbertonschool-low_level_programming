# makefile for executable holberton

CC = gcc
SRC = holberton.c main.c 
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic


all : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean :
	$(RM) *~ $(NAME)

oclean :
	$(RM) -f $(OBJ)

fclean :
	$(RM) *~ $(NAME)
	$(RM) $(OBJ)

re : oclean all